<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ReSafeStorage.Views.ControlView">
    
    <Grid>
        <StackPanel Margin="10, 10, 10, 0">
            <Border Background="White" Opacity="1" Height="330" CornerRadius="5">
                <ListBox x:Name="ListBox_Files" />
            </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 335, 0, 0">
            <Button Margin="15" Content="Загрузить"/>
            <Button Margin="15" Content="Скачать"/>
            <Button Margin="15" Content="Удалить"/>
            <Button Margin="15" Content="Резервное копирование"/>
        </StackPanel>
    </Grid>
    
</UserControl>
